# CheckBhai Backend Environment Variables

# Database (Recommended: Supabase with ?sslmode=require)
# Dialect must be postgresql+asyncpg://
DATABASE_URL=postgresql+asyncpg://postgres:[ID]:[PASS]@aws-0-[REGION].pooler.supabase.com:6543/postgres?sslmode=require

# Security
SECRET_KEY=your-super-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin User
ADMIN_EMAIL=admin@checkbhai.com
ADMIN_PASSWORD=admin123456

# AI Providers (At least one is required)
# If OpenAI fails, the app automatically switches to Groq.
OPENAI_API_KEY=sk-proj-your-openai-key-here
GROQ_API_KEY=gsk-your-groq-key-here

# Server
PORT=8000
